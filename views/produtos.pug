extends layout

block content
  h1 Produtos
  table.table.table-striped
    thead
      tr
        th Nome
        th Descrição
        th Preço
        th Atualizado em
    tbody
      each produto in produtos
        tr
          td= produto.nome
          td= produto.descricao
          td R$ #{produto.preco}
          td= produto.data_atualizado
  a.btn.btn-secondary.mt-3(href="/") Voltar ao início